<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_height="68dp">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="58dp"
        android:layout_weight="3"
        app:cardCornerRadius="8dp"
        android:layout_marginEnd="10dp"
        app:cardBackgroundColor="@color/curious_blue">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_number_column"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="36sp"
                android:textAlignment="center"
                android:textColor="@color/fringy_flower"
                android:textStyle="bold"
                android:fontFamily="@font/roboto"
                tools:text="1"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/txt_absen_matkul"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:fontFamily="@font/roboto"
                    tools:text="Keperawatan anak"
                    android:layout_marginStart="10dp"/>

                <TextView
                    android:id="@+id/txt_jam_matkul"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:fontFamily="@font/roboto"
                    android:layout_marginStart="10dp"
                    tools:text="08.00"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="58dp"
        android:layout_weight="1"
        app:cardBackgroundColor="@color/curious_blue"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_absen_lock_open" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>